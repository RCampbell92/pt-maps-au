<html lang="en">
    <!--put head in here-->
    <head></head>

    <body>

        <h1>Enter new region</h1>
        <br>

        <form class="new-stock" action="/posted-region" method="POST" style="margin-left: 100px; font-size: 1.5rem;">
            <p>Name</p>
            <input id="region_name" name="region_name">
            <br>
            <p>Image src</p>
            <input id="img_src" name="img_src">
            <br>
            <p>Population</p>
            <input type="number" id="population" name="population">
            <br>
            <p>Track length</p>
            <input type="number" id="track_length" name="track_length">
            <br>
            <p>Number of stops</p>
            <input type="number" id="num_stops" name="num_stops">
            <br>
            <p>Max frequency</p>
            <input type="number" id="max_frequency" name="max_frequency">
            <br>
            <p>Max frequency lines</p>
            <input id="max_frequency_lines" name="max_frequency_lines">
            <br>
            <button type="submit">Save</button>
        </form>
    </body>
</html>